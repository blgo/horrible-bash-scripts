#!/bin/bash
df
echo "updating mirrors"
reflector --verbose -l 10 -f 5 --sort rate --save /etc/pacman.d/mirrorlist
echo -e "\nbacking up the config with etckeeper"
etckeeper pre-install
pacman-db-upgrade
echo -e "\nREAD the changes generated by packmatic"
pacmatic -Syu
etckeeper post-install
#Remove older downloaded packages, keep the system memory usage lightweith
pacman -Sc 
